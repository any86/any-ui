<template>
    <sup :style="{top: top && `${top}px` , left: left && `${left}px`}" :class="[undefined === $slots.default ? 'atom-badge--dot' : 'atom-badge--text']" class="atom-badge">
        <slot></slot>
    </sup>
</template>
<script>
export default {
    name: 'Badge',

    props: {
        top: {},
        left: {},
        text: {
            type: [Number, String]
        }
    }
};
</script>
<style scoped lang="scss">
@import '../../scss/theme.scss';
$dotSize: 8px;
.atom-badge {
    position: relative;
    display: inline;
    &--dot {
        display: inline-block;
        position: relative;
        top: 0;
        left: 0;
        vertical-align: top;
        z-index: 2;
        width: $dotSize;
        height: $dotSize;
        border-radius: 100%;
        background: $base;
    }

    &--text {
        position: relative;
        height: 16px; // 如果不指定高度, 那么父容器的flex属性会影响到badge定位
        top: 0;
        left: -10px;
        vertical-align: top;
        text-align: center;
        white-space: nowrap;
        padding: 0 $gutter/3;
        border-radius: $gutter*2;
        background: $base;
        color: $sub;
        font-size: $small;
    }
}
</style>
